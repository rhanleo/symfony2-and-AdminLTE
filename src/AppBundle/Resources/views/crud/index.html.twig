{% extends '::base.html.twig' %}
    

        {% block body -%}
        <div class='container'>
            <h1>crud list</h1>

            <table class="records_list">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('crud_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.title }}</td>
                        <td>{{ entity.author }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('crud_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('crud_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

                <ul>
                <li>
                    <a href="{{ path('crud_new') }}">
                        Create a new entry
                    </a>
                </li>
            </ul>
        </div>

            {% endblock %}
    